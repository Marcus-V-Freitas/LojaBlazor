@if (Categorias == null)
{
<Carregando /> }
            else
            {
<header class="section-header">    
    <section class="header-main border-bottom">
        <div class="container">
            <div class="row align-items-center">

                <div class="col-lg-3 col-sm-4 col-md-4 col-5">
                    <a href="/" class="brand-wrap">
                        <img class="logo" src="images/logo.png">
                    </a>
                </div>

                <div class="col-lg-4 col-xl-5 col-sm-8 col-md-4 d-none d-md-block">
                    <NavBusca />
                </div>

                <div class="col-lg-5 col-xl-4 col-sm-8 col-md-4 col-7">
                    <div class="d-flex justify-content-end">

                        <AuthorizeView>
                            <NotAuthorized>
                                <div class="widget-header mr-3">
                                    <a href="/conta/login" class="icon icon-sm rounded-circle border">
                                        <i class="fa fa-shopping-cart"></i>
                                    </a>
                                    <span class="badge badge-pill badge-danger notify">0</span>
                                </div>

                                <div class="widget-header icontext">
                                    <a href="#" class="icon icon-sm rounded-circle border">
                                        <i class="fa fa-user"></i>
                                    </a>
                                    <div class="text">
                                        <span class="text-muted">Bem Vindo!</span>
                                        <div>
                                            <a href="/conta/login">Login</a> |
                                            <a href="/conta/registrar"> Registre-se</a>
                                        </div>
                                    </div>
                                </div>
                            </NotAuthorized>
                            <Authorized>
                                <NavCarrinho />

                                <a href="/lista-desejos" class="widget-header mr-3">
                                    <div class="icon">
                                        <i class="icon-sm rounded-circle border fa fa-heart"></i>
                                    </div>
                                </a>

                                <div class="widget-header dropdown">
                                    <a @onclick:preventDefault
                                       href="#"
                                       data-toggle="dropdown"
                                       class="dropdown-toggle"
                                       data-offset="20,10">
                                        <div class="icon icon-sm rounded-circle border ">
                                            <i class="fa fa-user"></i>
                                        </div>
                                        <span class="sr-only">Ações de perfil</span>
                                    </a>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" href="/conta/configuracao">Configuração de perfil</a>
                                        <a class="dropdown-item" href="/pedidos/meu">Meus Pedidos</a>
                                        <hr class="dropdown-divider">
                                        <Logout />
                                    </div>
                                </div>
                            </Authorized>
                        </AuthorizeView>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <nav class="navbar navbar-main navbar-expand-md border-bottom">
        <div class="container">

            <NavMovelMobile />

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#dropdown6">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="dropdown6">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link pl-0" href="/"> <strong>Home</strong></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/lista-desejos">Lista de Desejos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/produtos/pagina/1">Produtos</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a @onclick:preventDefault
                           class="nav-link dropdown-toggle"
                           href=""
                           data-toggle="dropdown"
                           aria-haspopup="true"
                           aria-expanded="false">
                            Categorias
                        </a>
                        <div class="dropdown-menu">
                            @foreach (var categoria in Categorias)
                            {
            <a class="dropdown-item"
               href="/produtos/categoria/@categoria.Nome/@categoria.Id">
                @categoria.Nome
            </a>}
                        </div>
                    </li>
                </ul>

                <AuthorizeView Roles="@Constants.AdministratorRole">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="/produtos/adicionar" class="btn btn-primary ml-md-4">
                                <i class="fa fa-plus"></i> Adicionar produto
                            </a>
                        </li>
                    </ul>
                </AuthorizeView>

            </div>
        </div>
    </nav>
</header>}

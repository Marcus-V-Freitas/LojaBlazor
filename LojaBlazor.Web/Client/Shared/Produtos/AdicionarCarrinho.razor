<EditForm Model="Model" OnValidSubmit="GravarAsync">

    <ListaErros MostrarErros="MostrarErros" Erros="Erros" />
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-row">

        <div class="form-group col-md flex-grow-0">
            <label>Quantidade</label>
            <div class="input-group mb-3 input-spinner">
                <div class="input-group-prepend">
                    <button @onclick="DecrementarQuantidade" class="btn btn-light" type="button" id="button-minus"> &minus; </button>
                </div>
                <input @bind-value="Model.Quantidade" type="text" class="form-control" />
                <div class="input-group-append">
                    <button @onclick="IncrementarQuantidade" class="btn btn-light" type="button" id="button-plus"> + </button>
                </div>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md">
            <button type="submit" class="btn btn-primary">
                <span class="text">Adicionar Carrinho</span>
                <i class="fas fa-shopping-cart"></i>
            </button>

            <a @onclick="() => AdicionarListaDesejos()"
               @onclick:preventDefault
               href="#"
               class="btn btn-light">
                <i class="fas fa-heart"></i>
            </a>

            <AuthorizeView Roles="@Constants.AdministratorRole" Context="Auth">
                <a href="/produtos/editar/@Id"
                   class="btn btn-outline-warning">
                    <i class="fa fa-pen"></i>
                </a>

                <a @onclick:preventDefault
                   @onclick="() => ExcluirAsync()"
                   href=""
                   class="btn btn-outline-danger">
                    <i class="fa fa-trash"></i>
                </a>
            </AuthorizeView>
        </div>
    </div>
</EditForm>

@page "/produtos/{Id:int}/{NomeProduto}"
@attribute [Authorize]

@if (Produto == null)
{
<Carregando /> }
            else
            {
<section class="section-content padding-y bg">
    <div class="container">
        <div class="card">
            <div class="row no-gutters">
                <aside class="col-md-6">
                    <article class="gallery-wrap">
                        <div class="img-big-wrap">
                            <a href="#"><img src="@Produto.FonteImagem" /></a>
                        </div>
                    </article>
                </aside>
                <main class="col-md-6 border-left">
                    <article class="content-body">

                        <h2 class="title">@Produto.Nome</h2>

                        <div class="mb-3">
                            <var class="price h4">$@Produto.Preco</var>
                        </div>

                        <p>@Produto.Descricao</p>

                        <dl class="row">

                            <dt class="col-sm-3">Categoria:</dt>
                            <dd class="col-sm-9">@Produto.NomeCategoria</dd>

                            <dt class="col-sm-3">Quantidade:</dt>
                            <dd class="col-sm-9">@Produto.Quantidade</dd>
                        </dl>

                        <hr />

                        <AdicionarCarrinho Id="@Produto.Id" NomeProduto="@Produto.Nome" QuantidadeProduto="@Produto.Quantidade" />

                    </article>
                </main>
            </div>
        </div>
    </div>
</section>}

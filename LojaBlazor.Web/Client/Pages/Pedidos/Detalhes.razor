@page "/pedido/detalhes/{Id}"
@attribute [Authorize]

@if (Pedido == null)
{
<Carregando /> }
            else
            {
<section class="section-pagetop bg">
    <div class="container">
        <h2 class="title-page text-center">Pedido #@Id</h2>
    </div>
</section>

                <section class="section-content padding-y bg">
                    <div class="container">

                        <div class="card mb-3">
                            <article class="card-body">
                                <header class="mb-4">
                                    <h4 class="card-title">Detalhes do Pedido</h4>
                                </header>
                                <div class="row">

                                    @foreach (var produto in Pedido.Produtos)
                                    {
                    <div class="col-md-6">
                        <figure class="itemside  mb-3">
                            <div class="aside">
                                <img src="@produto.FonteImagem" class="border img-xs" />
                            </div>
                            <figcaption class="info">
                                <p> @produto.Nome </p>
                                <span> @produto.Quantidade x $@produto.Preco = Total: $@(produto.Preco * produto.Quantidade) </span>
                            </figcaption>
                        </figure>
                    </div>}

                                </div>
                            </article>
                            <article class="card-body border-top">

                                <dl class="row">
                                    <dt class="col-sm-10">Criado em: </dt>
                                    <dd class="col-sm-2 text-right"><strong>@Pedido.CriadoEm</strong></dd>

                                    <dt class="col-sm-10">Subtotal: <span class="float-right text-muted">@Pedido.Produtos.Count() items</span></dt>
                                    <dd class="col-sm-2 text-right"><strong>$@TotalPreco</strong></dd>

                                    <dt class="col-sm-10">Descontos: <span class="float-right text-muted">0%</span></dt>
                                    <dd class="col-sm-2 text-danger text-right"><strong>$0</strong></dd>

                                    <dt class="col-sm-10">Frete: <span class="float-right text-muted">Entrega Padrão</span></dt>
                                    <dd class="col-sm-2 text-right"><strong>Grátis</strong></dd>

                                    <dt class="col-sm-10">Total:</dt>
                                    <dd class="col-sm-2 text-right"><strong class="h5 text-dark">$@TotalPreco</strong></dd>
                                </dl>

                            </article>
                        </div>

                    </div>
                </section>}

@page "/conta/configuracao"
@attribute [Authorize]

@if (Model == null)
{
<Carregando />
 }
else
{
<section class="section-content padding-y bg">
    <div class="container">

        <div class="row">

            <BarraLateral />

            <main class="col-md-9">

                <article class="card mb-3">
                    <div class="card-body">

                        <h4 class="card-title mb-4">Configurações da conta</h4>
                        <EditForm Model="Model" OnValidSubmit="GravarAsync">

                            <ListaErros MostrarErros="MostrarErros" Erros="Erros" />
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Email:</label>
                                <div class="col-sm-6">
                                    <InputText @bind-Value="Email" type="email" class="form-control-plaintext" readonly />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Primeiro Nome:</label>
                                <div class="col-sm-6">
                                    <InputText @bind-Value="Model.PrimeiroNome" type="text" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Sobrenome:</label>
                                <div class="col-sm-6">
                                    <InputText @bind-Value="Model.Sobrenome" type="text" class="form-control" />
                                </div>
                            </div>

                            <button class="btn btn-primary"> Salvar Mudanças </button>
                        </EditForm>

                    </div>
                </article>

            </main>
        </div>

    </div>
</section>}
